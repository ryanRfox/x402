{
  "name": "x402-e2e",
  "version": "1.0.0",
  "description": "End-to-end tests for X402 protocol",
  "main": "dist/test.js",
  "scripts": {
    "test": "tsx test.ts",
    "test:unit": "tsx src/balance-aware-selector.test.ts",
    "test:balance-c": "tsx src/balance-selection-fallback.test.ts",
    "test:balance-e": "tsx src/balance-selection-edge.test.ts",
    "test:watch": "tsc --watch",
    "setup": "./setup.sh",
    "setup:legacy": "./setup.sh --legacy",
    "install:all": "pnpm install && ./setup.sh",
    "install:all:legacy": "pnpm install && ./setup.sh --legacy",
    "clean": "rm -rf dist",
    "clean:ports": "lsof -ti:4022,4023,4024,4025,4026,4027,4028,4029,4030,4031,4032,4033 | xargs kill -9 2>/dev/null || echo 'Ports cleared'",
    "permit2:approve": "tsx scripts/permit2-approval.ts approve"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^17.0.1",
    "express": "^4.18.0",
    "prompts": "^2.4.2",
    "tsx": "^4.20.3",
    "viem": "^2.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/node": "^20.0.0",
    "@types/prompts": "^2.4.9",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}